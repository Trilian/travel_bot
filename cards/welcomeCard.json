{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Welcome to Fly Me",
            "size": "Medium",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "I'm the traveler agent, How can I help you ?",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.ShowCard",
            "title": "Help",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "My goal is to help to book a flight : give me a trip(dates and city to origin and destination) as well as the budget.",
                        "wrap": true
                    }
                ]
            }
        },
        {
            "type": "Action.ShowCard",
            "title": "Book a flight",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "Good, I am here to answer this task so please tell me where you want to go and on what dates ?",
                        "wrap": true
                    }
                ]
            }
        }
    ]
}