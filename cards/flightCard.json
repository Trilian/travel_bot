{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "type": "AdaptiveCard",
    "speak": "<s>Your flight is confirmed for you and 3 other passengers from San Francisco to Amsterdam on Friday, October 10 8:30 AM</s>",
    "body": [
        {
            "type": "TextBlock",
            "text": "Departure",
            "wrap": true,
            "fontType": "Default",
            "size": "Medium",
            "weight": "Bolder",
            "color": "Dark"
        },
        {
            "type": "TextBlock",
            "text": "${start_date}",
            "weight": "Bolder",
            "spacing": "None",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "spacing": "None",
            "columns": [
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${origin}",
                            "isSubtle": true,
                            "wrap": true,
                            "size": "ExtraLarge",
                            "color": "Accent"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://adaptivecards.io/content/airplane.png",
                            "size": "Small",
                            "spacing": "None",
                            "horizontalAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${destination}",
                            "horizontalAlignment": "Right",
                            "isSubtle": true,
                            "wrap": true,
                            "size": "ExtraLarge",
                            "color": "Accent"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Return",
            "size": "Medium",
            "weight": "Bolder",
            "color": "Dark"
        },
        {
            "type": "TextBlock",
            "text": "${end_date}",
            "weight": "Bolder",
            "spacing": "None",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "spacing": "None",
            "columns": [
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${destination}",
                            "isSubtle": true,
                            "wrap": true,
                            "size": "ExtraLarge",
                            "color": "Accent"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://adaptivecards.io/content/airplane.png",
                            "size": "Small",
                            "spacing": "None",
                            "horizontalAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${origin}",
                            "isSubtle": true,
                            "wrap": true,
                            "horizontalAlignment": "Right",
                            "size": "ExtraLarge",
                            "color": "Accent"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "spacing": "Medium",
            "columns": [
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Total",
                            "size": "Medium",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Right",
                            "text": "${budget}",
                            "size": "Medium",
                            "weight": "Bolder",
                            "wrap": true
                        }
                    ]
                }
            ]
        }
    ]
}